{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "lib": ["ES2019", "DOM"],
    "target": "ES2019",
    "allowJs": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*.spec.ts"
  ]
}
